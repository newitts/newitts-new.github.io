.card-delivery-address.card-fullwidth-m.card.card-noshadow-mobile.border-0.mb-53.mb-md-35
    .card-header.border-bottom-0.pt-33.pb-0.pb-xl-17
        .border-bottom
            .row-title.row.justify-content-between.align-items-center.pb-2
                .col-auto
                    h2.h5 Delivery address
                .col-auto.ms-auto.text-end
                    small.fw-medium.d-block.text-secondary.mb-xl-12 Where do you want us to ship the order?
    .card-body
        .form-container.pb-3
            .row.gx-3.gy-4
                .col-md-6
                    label.form-label(for="delivery_country") Country
                    select.form-select(id="delivery_country" aria-label="Select country for delivery")
                        include ../templates/_select_country_option
                .col-md-6
                    label.form-label(for="delivery_postcode") Postcode
                    input.form-control(id="delivery_postcode" type="text" placeholder="PM1 3AX")
                .col-md-12
                    label.form-label(for="delivery_company") Company
                    input.form-control(id="delivery_company" type="text" placeholder="Enter your company name")
                .col-md-12
                    label.form-label(for="delivery_address_1") Address 1
                    input.form-control(id="delivery_address_1" type="text" placeholder="Enter the address")
                .col-md-12
                    label.form-label(for="delivery_address_2") Address 2 #[span.text-light-520 (optional)]
                    input.form-control(id="delivery_address_2" type="text" placeholder="Enter the address")
                .col-md-12
                    label.form-label(for="delivery_address_3") Address 3 #[span.text-light-520 (optional)]
                    input.form-control(id="delivery_address_3" type="text" placeholder="Enter the address")
                .col-md-6
                    label.form-label(for="delivery_city") City
                    input.form-control(id="delivery_city" type="text" placeholder="London")
                .col-md-6
                    label.form-label(for="delivery_county") County
                    input.form-control(id="delivery_county" type="text" placeholder="Greater London")

