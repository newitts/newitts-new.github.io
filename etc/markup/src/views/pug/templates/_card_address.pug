.card-address.card-fullwidth-md.card.card-noshadow-mobile.h-100.text-dark.border-0
    .card-header.border-bottom-0.pt-33.pt-xl-55.pb-0
        .row.justify-content-between.align-items-center
            .col
                strong.name.fw-bold Jonathan Doe
            .col-auto
                a.link-edit.btn.btn-link(href="#") Edit
                a.link-delete.btn.btn-link(href="#") Delete
    .card-body
        address.opacity-60.fw-medium.mb-2
            each item in ['ACME Inc.', '14 Brown Street', 'Apt 2', 'London', 'United Kingdom', 'A92 6H3', '(+4)45612381238']
                span.d-block.mb-17!= item
    .card-footer.border-top-0
        .border-top.py-35
            .form-check.pb-1
                if addressDeliveryChecked === true
                    input.form-check-input(id="address_delivery_"+addressDeliveryId type='checkbox' checked)
                else
                    input.form-check-input(id="address_delivery_"+addressDeliveryId type='checkbox')
                label.form-check-label(for='address_delivery_'+addressDeliveryId)
                    | Deliver to this address
            .form-check.pb-1
                if addressInvoiceChecked === true
                    input.form-check-input(id="address_invoice_"+addressInvoiceId type='checkbox' checked)
                else
                    input.form-check-input(id="address_invoice_"+addressInvoiceId type='checkbox')
                label.form-check-label(for='address_invoice_'+addressInvoiceId)
                    | Use as billing address
